<UserControl x:Class="MBassWPF.PitchTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Frequency"/>
            <Label Name="Frequency" Content="--"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Note" Margin="0,0,28,0"/>
            <Label Name="Note" Content="--"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Cents" Margin="0,0,24,0"/>
            <Label Name="Cents" Content="--"/>
        </StackPanel>
        <Button Content="Detect"
                Name="DetectButton"
                Click="DetectClick" Background="#FFDEF9F3"/>
    </StackPanel>
</UserControl>
